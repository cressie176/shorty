{
  "name": "shorty",
  "version": "1.0.0",
  "description": "A URL shortener service with PostgreSQL persistence, automatic expiry, and scheduled maintenance",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch index.ts",
    "test": "APP_ENV=test node --test --test-concurrency=1 --test-timeout=1000 --import tsx test/**/*.test.ts",
    "test:match": "./bin/test",
    "build": "tsc",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "pg:migrate": "node --import tsx --eval \"import('./src/init/init-migrations.js')\"",
    "pg:start": "docker-compose -f docker/docker-compose.postgres.yml up -d",
    "pg:stop": "docker-compose -f docker/docker-compose.postgres.yml down"
  },
  "keywords": [],
  "author": "Steve",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@logtape/logtape": "^1.3.5",
    "hono": "^4.11.1",
    "marv": "^6.1.0",
    "marv-pg-driver": "^5.0.0",
    "nanoid": "^5.1.6",
    "normalize-url": "^8.1.0",
    "pg": "^8.16.3",
    "ramda": "^0.32.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@logtape/pretty": "^1.3.5",
    "@types/marv": "^6.0.5",
    "@types/marv-pg-driver": "^4.0.3",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/ramda": "^0.31.1",
    "lefthook": "^2.0.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
